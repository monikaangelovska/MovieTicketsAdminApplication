@{
}

@model List<MovieTicketsAdminapplication.Models.Order>

<div class="container">
    <div class="row m-4">
        <a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
    </div>
    <div class="row m-4">
        <table class="table table-hover table-bordered ">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Details</th>
                    <th scope="col">Number of products</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active Movies</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.User.Name</td>
                            <td>@item.MovieInOrders.Count</td>
                            <td><a asp-action="Details" asp-route-orderId="@item.Id" class="btn btn-info">View Order</a></td>
                            <td><a asp-action="CreateInvoice" asp-route-orderId="@item.Id" class="btn btn-info">Create Invoice</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>
